{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020", "dom"],
    "outDir": "./dist",
    "rootDir": ".",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmitOnError": false,
    "moduleResolution": "node",
    "allowJs": true
  },
  "include": ["src/lib/**/*.ts", "server.js", "src/lib/voice-service.ts"],
  "exclude": ["node_modules", "src/app/**/*"]
}
